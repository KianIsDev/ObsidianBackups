#!/bin/bash
cd ~/Documents/Obsidian/ObsidianBackups

# gnome-terminal
# /usr/bin/flatpak run --branch=stable --arch=x86_64 --command=obsidian.sh --file-forwarding md.obsidian.Obsidian @@u %U @@
# /usr/bin/flatpak run --branch=stable --arch=x86_64 --command=obsidian.sh --file-forwarding md.obsidian.Obsidian @@u %U @@
# /usr/bin/flatpak run md.obsidian.Obsidian


rt=$(date '+%d');
gnome-terminal -x bash -c "echo \"$rt\" > running.txt; /usr/bin/flatpak run --branch=stable --arch=x86_64 --command=obsidian.sh --file-forwarding md.obsidian.Obsidian @@u %U @@; echo \"-1\" > running.txt"

st=$(cat running.txt)
while [ $st -eq $rt ]
do
	git pull
	git add .
    
    rt=$(date '+%d');
	dt=$(date '+%d/%m/%Y %H:%M:%S');
	git commit -a -m "Backup $dt"
	git push
	echo "Backup $dt" >> BackupLog.txt
	st=$(cat running.txt)
	echo -e "\e[31mRed text\e[0m $st = $rt"
	sleep 5
done

if [ $st -ne "-1" ]; then
gnome-terminal -x bash -c "echo \"DAILY SESSION EXPIRED! Close Obsidian and re-open the backup program to start a new session\"; exec bash"
fi
echo "-1" > running.txt
